{
    "name": "mosaxiv/cakephp-token-verify",
    "description": "Easily issue tokens that can be used for mail authentication.",
    "type": "cakephp-plugin",
    "keywords": [
        "cakephp",
        "plugin",
        "token",
        "jwt"
    ],
    "homepage": "https://github.com/mosaxiv/cakephp-token-verify",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/mosaxiv/cakephp-token-verify/issues",
        "source": "https://github.com/mosaxiv/cakephp-token-verify"
    },
    "require": {
        "php": ">=7.0.0",
        "cakephp/cakephp": "~4.0",
        "lcobucci/jwt": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7|^6.0",
        "cakephp/cakephp-codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Token\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Token\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    },
    "scripts": {
        "check": [
            "@test",
            "@cs-check"
        ],
        "cs-check": "phpcs --colors -p --standard=vendor/cakephp/cakephp-codesniffer/CakePHP ./src ./tests",
        "cs-fix": "phpcbf --colors --standard=vendor/cakephp/cakephp-codesniffer/CakePHP ./src ./tests",
        "test": "phpunit --colors=always"
    }
}
